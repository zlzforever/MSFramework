      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "Machine": "%Machine%"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss,fff} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://192.168.100.254:3100",
          "labels": [
            {
              "key": "Application",
              "value": "ordering-api"
            }
          ],
          "propertiesAsLabels": [
            "Classification",
            "Machine"
          ]
        }
      }
    ]
  }
