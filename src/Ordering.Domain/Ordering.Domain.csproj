<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <!-- 明确指定要使用的Roslyn编译器版本 -->
    <RoslynCompilerVersion>4.14.0</RoslynCompilerVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- 添加对特定版本编译器的引用 -->
    <PackageReference Include="Microsoft.Net.Compilers.Toolset" Version="5.0.0" PrivateAssets="all" />
    <ProjectReference Include="..\MSFramework.Analyzers\MSFramework.Analyzers.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="true" />
    <ProjectReference Include="..\MSFramework\MSFramework.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>Ordering.Infrastructure</_Parameter1>
    </AssemblyAttribute>

  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Abstractions" Version="9.0.11" />
  </ItemGroup>
</Project>
